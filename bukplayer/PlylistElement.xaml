<UserControl x:Class="BukPlayer.PlylistElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BukPlayer"
             mc:Ignorable="d" d:DesignWidth="300" Height="40" BorderBrush="#FF3F3F46">
    <Grid Height="40" VerticalAlignment="Top" Background="#FF1B1B1C" >
        <Image x:Name="image" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="40" />
        <Label x:Name="Title" Content="Title" HorizontalAlignment="Left" Height="26" Margin="53,-5,0,0" VerticalAlignment="Top" Width="auto" Background="{x:Null}" Foreground="#FF5A8F55" FontSize="13.333" BorderBrush="Black"/>
        <Label x:Name="Artist" Content="Artist" HorizontalAlignment="Left" Height="23" Margin="53,16,0,0" VerticalAlignment="Top" Width="auto" Background="{x:Null}" Foreground="#FFB8D1B6" FontSize="10.667"/>
        <Border BorderBrush="#FF474747" BorderThickness="1" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="300"/>

    </Grid>
</UserControl>
